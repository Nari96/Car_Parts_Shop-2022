<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/partPicture"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/partName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/partName_title"
                android:textColor="?android:textColorSecondary" />


            <TextView
                android:id="@+id/partInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/partName"
                android:padding="10dp"
                android:text="@string/informations" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/partInfo"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:textColor="@color/purple_200" />

            <Button
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_centerHorizontal="true"
                android:text="KosÃ¡rba"
                android:backgroundTint="@color/custom_red"
            />


        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>